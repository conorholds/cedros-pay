{
  "name": "@cedros/pay-react",
  "version": "1.1.20",
  "description": "React frontend library for Cedros Pay - unified Stripe and Solana x402 payments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "react-native": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./stripe-only": {
      "react-native": "./src/stripe-only.ts",
      "types": "./dist/stripe-only.d.ts",
      "import": "./dist/stripe-only.mjs",
      "require": "./dist/stripe-only.js"
    },
    "./crypto-only": {
      "react-native": "./src/crypto-only.ts",
      "types": "./dist/crypto-only.d.ts",
      "import": "./dist/crypto-only.mjs",
      "require": "./dist/crypto-only.js"
    },
    "./telemetry": {
      "react-native": "./src/telemetry.ts",
      "types": "./dist/telemetry.d.ts",
      "import": "./dist/telemetry.mjs",
      "require": "./dist/telemetry.js"
    },
    "./testing": {
      "react-native": "./src/testing/index.ts",
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.mjs",
      "require": "./dist/testing/index.js"
    },
    "./style.css": "./dist/pay-react.css"
  },
  "sideEffects": [
    "*.css"
  ],
  "files": [
    "dist"
  ],
  "keywords": [
    "payments",
    "stripe",
    "solana",
    "x402",
    "crypto",
    "react",
    "stablecoins"
  ],
  "author": "Cedros Pay Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/conorholds/cedros-pay.git",
    "directory": "ui"
  },
  "bugs": {
    "url": "https://github.com/conorholds/cedros-pay/issues"
  },
  "homepage": "https://github.com/conorholds/cedros-pay/tree/main/ui#readme",
  "peerDependencies": {
    "@cedros/login-react": ">=0.0.4",
    "@solana/spl-token": "^0.4.14",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.95.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@cedros/login-react": {
      "optional": true
    },
    "@solana/spl-token": {
      "optional": true
    },
    "@solana/wallet-adapter-base": {
      "optional": true
    },
    "@solana/wallet-adapter-react": {
      "optional": true
    },
    "@solana/wallet-adapter-react-ui": {
      "optional": true
    },
    "@solana/wallet-adapter-wallets": {
      "optional": true
    },
    "@solana/web3.js": {
      "optional": true
    }
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@stripe/stripe-js": "^4.0.0",
    "bs58": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "js-base64": "^3.7.8",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@cedros/login-react": "^0.0.4",
    "@solana/spl-token": "^0.4.14",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.95.0",
    "@storybook/addon-docs": "^10.0.6",
    "@storybook/react": "^10.2.8",
    "@storybook/react-vite": "^10.0.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^4.0.8",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^10.0.6",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.49",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "storybook": "^10.0.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.4.0",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.8"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check:duplication": "node scripts/check-duplication-drift.mjs --ci",
    "check:duplication:report": "node scripts/check-duplication-drift.mjs",
    "ci:checks": "npm run lint && npm run type-check && npm test && npm run check:duplication",
    "analyze": "ANALYZE=true vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run lint && npm run type-check && npm test && npm run build",
    "prepare": "husky"
  }
}
